{
	"name": "evias/bare-extension",
	"type": "platform-extension",
	"description": "Boilerplate for Plugins with Cartalyst/Platform",
	"authors": [
		{
			"name": "eVias Services",
			"email": "info@evias.be"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "~5.0",
		"platform/foundation": "~2.0|~3.0"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"eVias\\BareExtension\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
